<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Outbound network connections (connect to remote sites) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Inbound connections (proxy listens for connections) -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Allow the app to load and use .dylibs (required if custom libs are outside system paths) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Allow DYLD_* env vars-->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>

    <key>com.apple.security.cs.allow-jit</key>
    <true/>

</dict>
</plist>
